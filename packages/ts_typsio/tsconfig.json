{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./"
  },
  "exclude": [ "node_modules", "dist" ],
  "include": [
    "src/**/*.ts",
    "index.ts"
  ]
}